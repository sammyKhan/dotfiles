"IDE like features
filetype plugin on
filetype indent on
syntax enable

"enable plugins
execute pathogen#infect()

"Show line numbers
set number

"No sound on errors
set noerrorbells
set novisualbell

"colorscheme
set t_Co=256
let g:molokai_original = 1
let g:rehash256 = 1
colorscheme molokai 

" 1 tab == 2 spaces
set expandtab
set shiftwidth=2
set tabstop=2

set ai "Auto indent
set si "Smart indent

:nmap ; :
:nmap <space> zz
